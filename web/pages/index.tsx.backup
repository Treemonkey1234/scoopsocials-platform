                </label>
                
                <label className="flex items-center">
                  <input
                    type="radio"
                    name="flagReason"
                    value="unconstructive"
                    checked={flagReason === 'unconstructive'}
                    onChange={(e) => setFlagReason(e.target.value)}
                    className="mr-2"
                  />
                  <span className="text-sm">Unconstructive Content</span>
                </label>
                
                <label className="flex items-center">
                  <input
                    type="radio"
                    name="flagReason"
                    value="spam"
                    checked={flagReason === 'spam'}
                    onChange={(e) => setFlagReason(e.target.value)}
                    className="mr-2"
                  />
